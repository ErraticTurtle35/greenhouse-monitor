<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Invernadero
        </h3>
    </div>
    <div class="panel panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button id="btn-editgreenhouse" class="btn btn-default">
                    Editar
                </button>
                <button id="btn-updategreenhouse" class="btn btn-default">
                    Guardar
                </button>
            </div>
            <div class="panel-body">
                <form id="greenhouseForm" class="hide">
                    <div class="form-group">
                        <label for="fName">Nombre:</label>
                        <div class="form-inline">
                            <input type="text" class="form-control" id="fNombre" name="name" placeholder="Nombre">
                            <input id="fEstado" name="state" type="checkbox"> Activo
                        </div>
                        <br>
                        <label for="direccion">Direción:</label>
                        <input type="text" class="form-control" id="fDireccion" name="address" placeholder="Dirección">
                        <br>
                        <label for="dueño">Dueño:</label>
                        <input type="text" class="form-control" id="fDueño" name="owner" placeholder="Dueño">
                        <br>
                        <label for="descripccion">Descripción:</label>
                        <textarea id="fDescripcion" name="description" class="form-control" rows="3"
                                  placeholder="Descripción"></textarea>
                    </div>
                </form>

                <div id="greenhouseInformation" class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <h3>Nombre:
                                <small id="greenhouseName">{{greenhouse.name}}</small>
                            </h3>
                        </div>
                        <div class="col-md-4">
                            <h3>Estado:
                                {{#if greenhouse.state}}
                                    <small id="greenhouseActive">Activo</small>
                                {{else}}
                                    <small id="greenhouseInactive">Inactivo</small>
                                {{/if}}
                            </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <h3>Dirección:
                                <small id="greenhouseAddress">{{greenhouse.address}}</small>
                            </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <h3>Dueño:
                                <small id="greenhouseOwner">{{greenhouse.owner}}</small>
                            </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <h3>Descripción:
                                <small id="greenhouseDescription">{{greenhouse.description}}</small>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sensores</h3>
                <br/>
                <button id="btn-createsensor" class="btn btn-default">
                    Crear
                </button>
                <button id="btn-savesensor" class="btn btn-default">Guardar</button>
            </div>
            <div class="panel-body">
                <form id="sensorForm" class="hide">
                    <div class="form-group">
                        <label for="fsName">Nombre:</label>
                        <div class="form-inline">
                            <input type="text" class="form-control hide" id="fsId" name="id">
                            <input type="text" class="form-control" id="fsName" name="name" placeholder="Nombre">
                            <select class="form-control" id="fsType" name="type">
                                <option value="Humedad">Humedad</option>
                                <option value="Temperatura">Temperatura</option>
                                <option value="Ventilacion">Ventilacion</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                    </thead>
                    <tbody>
                    {{#each greenhouse.sensors}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{type}}</td>
                            <td>
                                <a href="/greenhouse/sensor/{{id}}">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <a href="/greenhouse/sensor/delete/{{id}}">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>